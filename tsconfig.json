{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
